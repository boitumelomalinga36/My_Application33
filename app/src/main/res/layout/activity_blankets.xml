<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Blankets">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2">

        <TextView
            android:id="@+id/DOUBLE"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="18dp"
            android:text="DOUBLE"
            android:textStyle="bold"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/DPRICE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price: R150"
            android:textStyle="bold"
            android:textSize="18dp" />

        <Button
            android:id="@+id/buttonRemove1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="-"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/textItemQuantity1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="18dp" />

        <Button
            android:id="@+id/buttonAdd1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="+"
            android:textSize="18dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/QUEEN"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="18dp"
            android:text="QUEEN"
            android:textStyle="bold"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/QPRICE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price: R250"
            android:textStyle="bold"
            android:textSize="18dp" />

        <Button
            android:id="@+id/buttonRemove2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="-"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/textItemQuantity2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="18dp" />

        <Button
            android:id="@+id/buttonAdd2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="+"
            android:textSize="18dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="413dp"
        android:layout_height="233dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/blue" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="414dp"
        android:layout_height="174dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pit" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="184dp"
        android:layout_marginEnd="256dp"
        android:text="BLANKETS"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="208dp"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2">

        <TextView
            android:id="@+id/KING"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="18dp"
            android:text="KING"
            android:textStyle="bold"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/KPRICE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price: R350"
            android:textStyle="bold"
            android:textSize="18dp" />

        <Button
            android:id="@+id/buttonRemove3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="-"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/textItemQuantity3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="18dp" />

        <Button
            android:id="@+id/buttonAdd3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="+"
            android:textSize="18dp" />
    </LinearLayout>

    <Button
        android:id="@+id/button9"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="140dp"
        android:background="@drawable/altbutton"
        android:text="ADD TO CART"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>